<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Empty TextView when there is nothing in RecyclerView -->
    <style name="EmptyListInfo">
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textSize">@dimen/task_text_size</item>
        <item name="android:padding">@dimen/list_item_padding</item>
    </style>

    <style name="CardViewText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/cardview_likes_size</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardViewTextBold" parent="CardViewText">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
