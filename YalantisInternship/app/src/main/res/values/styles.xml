<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TaskNames" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/task_text_size</item>
        <item name="android:paddingTop">@dimen/task_text_padding</item>
        <item name="android:paddingBottom">@dimen/task_text_padding</item>

    </style>

    <style name="TaskDates" parent="TaskNames">
        <item name="android:textColor">?android:textColorSecondary</item>

    </style>

    <style name="StatusSign">
        <item name="android:textAppearance">?android:textAppearanceInverse</item>
        <item name="android:textSize">@dimen/task_text_size</item>
        <item name="android:paddingTop">@dimen/task_text_padding</item>
        <item name="android:paddingLeft">@dimen/task_text_padding_side</item>
        <item name="android:paddingRight">@dimen/task_text_padding_side</item>
        <item name="android:paddingBottom">@dimen/task_text_padding</item>
        <item name="android:layout_marginBottom">@dimen/status_sign_margin</item>

    </style>
</resources>
